  <div><%= @school.name %></div>
  <div><%= @school.address %></div>
  <div><%= @school.city %></div>
  <div><%= @school.zip %></div>
  <div><%= @school.county %></div>
  <div><%= @school.phone_number %></div>
  <div><%= @school.url %></div>
  <div><%= @school.latitude %></div>
  <div><%= @school.longitude %></div>
  <div><%= link_to 'Edit', edit_school_path(@school) %></div>        
  <hr/>


<div class="large-6 medium-6 small-6 columns">  
  <div id="map-canvas"></div>
</div>



<script type="text/javascript">
     function initialize() {
      var myLatLng = new google.maps.LatLng(<%=@school.latitude %>, <%=@school.longitude %>)
       var mapOptions = {
         center: myLatLng,
         zoom: 15
       };
       var map = new google.maps.Map(document.getElementById("map-canvas"),
           mapOptions);
       var marker = new google.maps.Marker({
        position: myLatLng,
        map: map
       });
     }
     google.maps.event.addDomListener(window, 'load', initialize);
</script>